<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/detalleProducto.css">
    <title>Productos</title>
</head>
<body>
    <header class="main-header">
        
        <!-- Menú desplegable -->
        <%- include ('../partials/menu')%>
        
        <div class="main-header-top-bar center">
            <a href="http://localhost:3032"><img src="/images/logo-ursus.png" class="logo"></a>
        </div> 
            <ul class="right-navbar">
                <li><a href="#"><i class="fa-solid fa-magnifying-glass lupita"></a></i></li>
                <li><a href="/login"><i class="fa-solid fa-user usuario-existente"></a></i></li>
                <li><a href="/shopping-cart"><i class="fa-solid fa-cart-shopping"></a></i></li>                
            </ul>
    </header>
    <main>
        <section class="principal-producto">

                <img class="remera" src="<%= articulo.imagen %>" alt="remera"> 
            <div class="pieProducto"> 
                <p class="nombre-remera"><%= articulo.nombre %></p>
                <div class="marco-remera">
                <p class="nombre-precio">$ <%= articulo.precio %></p>
                </div>
            </div>
        </section>
        <section class="contenedor-secundario">
            <div class="secundario-producto">
                <img class="remera-secundario" src="<%= articulo.imagen %>" alt="remera-secundario">
                <img class="remera-secundario" src="<%= articulo.imagen %>" alt="remera-secundario">
                <img class="remera-secundario" src="<%= articulo.imagen %>" alt="remera-secundario">
                <img class="remera-secundario" src="<%= articulo.imagen %>" alt="remera-secundario">
            </div>
        </section>
        <section class="detalle">
            <label>Talle</label>
            <select name="talle" id="talle">
                <option><%= articulo.talle %></option> 
            </select>
            <form class="contenedor-color">
                <label>Color</label>
                <input type="color" name="color" id="color" placeholder="">               
            </form>    
                <label>Cantidad</label>
                <select name="cantidad" id="cantidad">
                    <option><%= articulo.cantidad %></option>
                </select>    
        </section>
        <section class="disponible">
            <p class="subdisponible">Artículo disponible: <%= articulo.disponible %></p>
            <div class="iconos-envios">
                <div class="camion-contenedor">
                    <i class="fa-solid fa-truck"></i><p class="costo">Costo de envíos</p>
                </div>
                <div class="reembolso-contenedor">
                    <i class="fa-solid fa-sack-dollar"></i><p class="reembolso">Reembolsos</p>
                </div>
            </div>
        </section>
        <div class="contenedor-agregar">
        <button class="agregar" type="submit">Agregar al carrito</button>
        </div>
        <button class="editar-producto"><a href="/editarproducto">Editar Producto</a></button> 
    </main>

    <!-- Footer --> 
    <%- include ('../partials/footer')%>
</body>
</html>