<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/db26de78cd.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
  <link rel="stylesheet" href="css/login.css">
  <title>Document</title>
</head>


<body>

  <!-- Menú desplegable -->
  <%- include ('../partials/navbar')%>

    <main>
      <div class="contenedor1">
        <div class="contenedor2">
          <h1 class="inicio-sesion">INICIAR SESION</h1>

          <form action="/login" method="POST" id="formLogin">
            <div class="mail">
              <label>CORREO ELECTRONICO</label>
              <input class="barra-mail" type="email" name="email" id="email" placeholder="Email">
              <small id="emailError" style="color: red"></small>
              <% if (locals.errors && errors.email) { %>
                <div class="errorRegistro" style="color: red">
                  <%= errors.email.msg %>
                </div>
                <% } %>
            </div>
            <div class="contraseña">
              <label>CONTRASEÑA</label>
              <input class="barra-mail" type="password" name="password" id="password" placeholder="Contraseña">
              <small id="passwordError" style="color: red"></small>
            </div>
            <div class="recordar">
              <label for="recordar">Recordar Usuario</label>
              <input type="checkbox" name="recordar">
            </div>
            <div class="reg-text">
              <input id="ingresa" class="reg-text" type="submit" value="Ingresá">
            </div>
          </form>

          <div class="olv">
            <h5>¿Olvidaste tu contraseña?</h5>
          </div>
          <div class="olv dos">
            <span class="todavía-pregunta">¿Todavía no tenés usuario?</span>
            <a href="/register">
              <h5 class="boton-registrate">Registrate</h5>
            </a>
          </div>
        </div>
      </div>
    </main>
    <!-- Footer -->
    <%- include ('../partials/footer')%>
      <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
      <script type="text/javascript" src="js/validationLogin.js"></script>
</body>


</html>